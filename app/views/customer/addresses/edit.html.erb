<% provide(:title, "配送先編集") %>
<h2>配送先編集</h2>


	<%= form_for @address, url: address_path do |f| %>
	<% if @address.errors.any? %>
	<div id="error_explanation">
		<h3><%= @address.errors.count %>件のエラーが発生しました</h3>
		<ul>
			<% @address.errors.full_messages.each do |message| %>
			<li><%= message %></li>
			<% end %>
			<% end %>
		</ul>

		<div class="form-group row">
			<%= f.label :"郵便番号(ハイフンなし)", class: "col-xs-12" %>
			<div class="col-xs-3">
				<%= f.text_field :postal_code, class: "form-control" %>
			</div>
		</div>

		<div class="form-group row">
			<%= f.label :"住所", class: "col-xs-12"  %>
			<div class="col-xs-7">
				<%= f.text_field :address, class: "form-control" %>
			</div>
		</div>

		<div class="form-group row">
			<%= f.label :"宛名", class: "col-xs-12"  %>
			<div class="col-xs-3">
				<%= f.text_field :name, class: "form-control"  %>
			</div>
		</div>
		<div>
			<%= f.submit "編集する", class: "btn btn-primary" %>
		</div>
	<% end %>


</div>