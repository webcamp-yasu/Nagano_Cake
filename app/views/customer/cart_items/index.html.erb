<div class="clearfix">
	<h1 class="pull-left">ショッピングカート</h1>
	<%= link_to "カートを空にする", cart_items_path, method: :delete, data: { confirm: '本当に消しますか？' }, class:"btn btn-danger pull-right" %>
</div>
<table class="table">
	<thead>
		<tr class="active">
			<th>商品名</th>
			<th>単価（税込）</th>
			<th>数量</th>
			<th>小計</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		<% @sum = 0 %>
		<% @cart_items.each do |cart_item| %>
			<tr>
				<td>
					<%= link_to items_path(cart_item.item) do %>
				 		<%= attachment_image_tag(cart_item.item, :image,　format: 'jpeg', size: "40x40") %>
					<% end %>
					<%= cart_item.item.name %>
				</td>
				<td><%= cart_item.item.price %></td>
				<td>
					<%= cart_item.item.amount %>
					<% form_for cart_item do |f| %>
					  <%= f.select :amount, [*1..100], class:"form-control" %>
					  <%= f.submit "変更"%>
					<% end %>
				</td>
				<td><%= (cart_item.subtotal).to_i %>円</td>
				<td><%= link_to "削除する", cart_item_path(@cart_item), method: :delete, class:"btn btn-danger pull-right" %></td>
			</tr>
		<% @sum += cart_item.subtotal %>
		<% end %>
	</tbody>
</table>
<div class="pull-left">
	<%= link_to "買い物を続ける", items_path, class:"btn btn-primary" %>
</div>
<div class="pull-right">
	<table class="table">
		<tbody>
			<tr>
				<td>合計金額</td>
				<td><%= @sum = 0 %>円</td>
			</tr>
		</tbody>
	</table>
</div>