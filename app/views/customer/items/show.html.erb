<div class="row">
	<div>
		<%= attachment_image_tag(@item,:image, :fill,300, 200) %>
	</div>
	<div>
		<h2><%= @item.name %></h2>
		<p><%= @item.detail %></p>
		<p>¥ <%= tax_price(@item.price) %><span>(税込)</span></p>
	</div>

	<div class="field">
		<%= form_for(@cart_item, url: cart_items_path) do |f| %>
		<%= f.hidden_field :item_id, value: @item.id %>
		<%= f.select :amount, options_for_select(1..10), {include_blank: "個数選択"} %>
		<%= f.submit "カート内に入れる", class: "btn btn-primary" %>
		<% end %>
	</div>

</div>

