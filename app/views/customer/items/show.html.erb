<% provide(:title, "商品詳細") %>
<div class="row">
	<div class="col-xs-12 col-sm-2">
		<%= render 'layouts/genre_search', genres: @genres %>
	</div>

	<div class="col-xs-12 col-sm-10">
		<div class="row">
			<div class="col-xs-12 col-sm-8 col-md-7	col-lg-6">
				<div >
					<%= attachment_image_tag(@item,:image, :fill,400, 300) %>
				</div>
			</div>
			<div class="col-xs-12 col-sm-4 col-md-5	col-lg-6">

				<div>
					<h2><strong><%= @item.name %></strong></h2>
					<p><%= @item.detail %></p>
					<p><strong><%= tax_price(@item.price) %>円</strong>(税込)</p>
				</div>

				<div class="form-group">
					<div class="row">
						<%= form_for(@cart_item, url: cart_items_path) do |f| %>
						<%= f.hidden_field :item_id, value: @item.id %>
						<div class="col-xs-4">
							<%= f.select :amount, options_for_select(1..10), {}, {class: "form-control"} %>
						</div>
						<%= f.submit "カートに入れる", class: "btn btn-primary" %>
						<% end %>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>