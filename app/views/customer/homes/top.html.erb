<div class="row">
	<% provide(:title, "ホーム") %>
	<div class="top-image">
		<div class="top-text col-sm-offset-1">
			<p>
				　ようこそ、<br>
				　長野の小さな洋菓子店<br>
			</p>
			<p class="top-shopname">　Nagano Cake へ！</p>
		</div>
	</div>

	<div class="col-xs-3">
		<%= render 'layouts/genre_search', genres: @genres %>
	</div>

	<div class="col-xs-9">
		<h2>オススメ商品</h2>
		<% @random.each do |items| %>
		<div class="col-xs-3">
			<div>
				<%= link_to attachment_image_tag(items,:image, :fill, 120,120), item_path(items.id) %>
			</div>

			<div>
				<%= link_to items.name, item_path(items.id) %>
			</div>

			<div>
				<%= items.price %>円
			</div>
		</div>
		<% end %>
		<!-- 商品一覧ページへリンクします -->
		<div class="text-right"><%= link_to "もっと見る", items_path %></div>
	</div>
</div>