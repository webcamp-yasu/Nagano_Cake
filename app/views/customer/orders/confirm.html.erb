<% provide(:title, "注文情報確認") %>

<h1>注文情報確認</h1>
<div class="row">
	<div class="col-9">
		<table class="table table-bordered">
			<thead>
				<tr>
					<th>商品名</th>
					<th>単価(税込)</th>
					<th>数量</th>
					<th>小計</th>
				</tr>
			</thead>
			<tbody>
				<% @cart_items.each do |cart_item| %>
				<tr>
					<td>
						<%= attachment_image_tag cart_item.item, :image, :fill, 50, 50 %>
						<%= cart_item.item.name %>
					</td>
					<td><%= tax_price(cart_item.item.price) %>円</td>
					<td><%= cart_item.amount %></td>
					<td><%= sub_total(cart_item) %>円</td>
				</tr>
				<% end %>
			</tbody>
			<table class="table table-bordered">
				<tr>
					<th>送料</th>
					<td><%= @order.postage %>円</td>
				</tr>
				<tr>
					<th>商品合計</th>
					<td><%= total_price(@cart_items) %>円</td>
				</tr>
				<tr>
					<th>請求金額</th>
					<td><%= billing(@order) %>円</td>
				</tr>
			</table>

			<table class="table table-bordered">
				<tr>
					<th>支払方法</th>
					<td><%= @order.payment_method %></td>
				</tr>
				<tr>
					<th>お届け先</th>
					<td><%= "#{@order.postal_code} #{@order.address} #{@order.address_name}" %></td>
				</tr>
			</table>

			<%= form_for @order, url:orders_path do |f| %>
			<%= f.hidden_field :billing_amount %>
			<%= f.hidden_field :address %>
			<%= f.hidden_field :address_name %>
			<%= f.hidden_field :payment_method %>
			<%= f.hidden_field :postal_code %>
			<%= f.submit "購入を確定する", class: "btn btn-success" %>
			<% end %>

