<h1>注文情報確認</h1>
<div class="row">
    <div class="col-9">
		<table>
			<thead>
				<tr>
					<th>商品名</th>
					<th>単価(税込)</th>
					<th>数量</th>
					<th>小計</th>
				</tr>
			</thead>
			<tbody>
				<% @carts.each do |cart| %>
				<tr>
					<td>
						<%= attachment_image_tag cart.item, :item_image, :fill, 50, 50 %>
						<%= cart.item.name %>
					</td>
					<td><%= taxprice(item.price) %></td>
					<td><%= cart.item.amount %></td>
					<td><%= cart.sub_total(item.price) %></td>
				</tr>
				<% end %>
			</tbody>
		<table>
 	<div class="col-3">
			<tbody>
				<tr>
					<td>送料</td>
					<td>800</td>
				</tr>
				<tr>
					<td>商品合計</td>
					<td><%= cart.total_price(item.price)%></td>
				</tr>
				<tr>
					<td>請求金額</td>
					<td><%= cart.total_price(item.price + 800)%></td>
				</tr>
			</tbody>
		</table>
	</div>

		支払い方法
		 confirm.payment_method %>

		<p>お届け先</p>
		<%= confirm.address %>

		submit

