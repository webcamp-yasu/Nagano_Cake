<% provide(:title, "管理者ログイン") %>

<div class="row">
  <div class="col-xs-2"></div>
  <div class="col-xs-8">
    <h2>管理者ログイン</h2>

    <%= render "admins/shared/error_messages", resource: resource %>

    <div id="error_explanation">
      <%= flash[:alert] %>
    </div>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

    <div class="form-group">
      <%= f.label :"メールアドレス", class: "col-xs-3" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "メールアドレス" %>
      （管理者アカウント：admin@gmail.com）
    </div>

    <div class="form-group">
      <%= f.label :"パスワード", class: "col-xs-3" %>
      <%= f.password_field :password, autocomplete: "current-password", placeholder: "パスワード" %>
      （パスワード：password）
    </div>

    <div class="actions">
      <%= f.submit "ログイン", class:"btn btn-primary" %>
    </div>
    <% end %>
  </div>
  <div class="col-xs-2"></div>
</div>


