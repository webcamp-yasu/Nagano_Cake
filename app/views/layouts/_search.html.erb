<!-- 管理者検索機能 -->
<div class="container">
  <div class="row">
    <% if admin_signed_in? %>
    <div class="search-form col-xs-6 col-sm-4 pull-right">
      <%= form_tag(admin_search_path, method: :get) do %>
      <div class="form-group col-xs-9 col-sm-9">
        <%= text_field_tag 'search[content]', nil, class: "form-control", placeholder: "商品名で検索" %>
      </div>
      <span class="form-group-btn col-xs-3 col-sm-3">
        <%= button_tag :type => "submit", :class => "btn btn-primary btn-default" do %>
        <i class="fas fa-search"></i>
        <% end %>
      </span>
      <% end %>
    </div>
    <!-- 管理者以外検索機能 -->
    <% else %>
    <div class="search-form col-xs-6 col-sm-4 pull-right">
      <%= form_tag(search_path, method: :get) do %>
      <div class="form-group col-xs-9 col-sm-9">
        <%= text_field_tag 'search[content]', nil, class: "form-control", placeholder: "商品名で検索" %>
        <%= hidden_field_tag 'search[model]', 'item' %>
      </div>
      <span class="form-group-btn col-xs-3 col-sm-3">
        <%= button_tag :type => "submit", :class => "btn btn-primary btn-default" do %>
        <i class="fas fa-search"></i>
        <% end %>
      </span>
      <% end %>
    </div>
    <% end %>
  </div>
</div>

