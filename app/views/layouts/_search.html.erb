<!-- 管理者検索機能 -->
<div class="container">
  <div class="row">
    <% if admin_signed_in? %>
    <div class="search-form pull-right">
      <%= form_tag(admin_search_path, method: :get) do %>
      <div class="form-group col-xs-8">
        <%= text_field_tag 'search[content]', nil, class: "form-control", placeholder: "商品名で検索" %>
      </div>

      <span class="form-group-btn col-xs-4">
        <%= button_tag :type => "submit", :class => "btn btn-primary btn-default" do %>
        <i class="fas fa-search"></i>
        <% end %>
      </span>
      <% end %>
    </div>

    <!-- 管理者以外検索機能 -->
    <% else %>
    <div class="search-form pull-right">
      <%= form_tag(search_path, method: :get) do %>
        <div class="row">
          <div class="form-group col-xs-8">
            <%= text_field_tag 'search[content]', nil, class: "form-control", placeholder: "商品名で検索" %>
            <%= hidden_field_tag 'search[model]', 'item' %>
          </div>

          <span class="form-group-btn col-xs-4">
            <%= button_tag :type => "submit", :class => "btn btn-primary btn-default" do %>
            <i class="fas fa-search"></i>
            <% end %>
          </span>
        </div>
      <% end %>
    </div>
    <% end %>
  </div>
</div>