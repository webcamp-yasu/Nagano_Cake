<h1>注文履歴一覧</h1>
	<table class="table">
		<thead>
			<tr class="active">
				<th>購入日時</th>
				<th>購入者</th>
				<th>注文個数</th>
				<th>注文ステータス </th>
			</tr>
		</thead>
		<tbody>
			<% @orders.each do |order| %>
				<tr>
					<td>
						<%= link_to admin_order(order) do %>
							<%= order.create_at %>
						<% end %>
					</td>
					<td><%= order.customer.last_name %><%= order.customer.first_name %></td>
					<td><%= order.order_detail.amount %></td>
					<td><%= order.status %></td>
				</tr>
			<% end  %>
		</tbody>
	</table>