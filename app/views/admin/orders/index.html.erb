<% provide(:title, "注文履歴一覧") %>

<h1>注文履歴一覧</h1>
	<table class="table">
		<thead>
			<tr class="active">
				<th>購入日時</th>
				<th>購入者</th>
				<th>注文個数</th>
				<th>注文ステータス </th>
			</tr>
		</thead>
		<tbody>
			<% @orders.each do |order| %>
				<tr>
					<td>
						<%= link_to admin_order_path(order) do %>
							<%= order.created_at.strftime('%Y/%m/%d %H:%M') %>
						<% end %>
					</td>
					<td><%= full_name(order.customer) %></td>
					<td><%= order.order_details.sum(:amount) %></td>
					<td><%= order.status_i18n %></td>
				</tr>
			<% end  %>
		</tbody>
	</table>