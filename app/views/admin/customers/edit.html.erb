<% provide(:title, "会員情報編集") %>

<h2><%= full_name(@customer) %>さんの会員情報編集</h2>

<%= form_for(@customer, url: admin_customer_path) do |f| %>

<% if @customer.errors.any? %>
<div id="error_explanation">
  <h3><%= @customer.errors.count %>件のエラーが発生しました</h3>
  <ul>
    <% @customer.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>

<div class="col-xs-8">
  <div class="form-group">
    <!-- ID が小文字になってしまうので2つ記載-->
    <%= f.label :"会員ID", "会員ID", class: "col-xs-3" %>
    <%= f.label :"#{@customer.id}" %>
  </div>

  <div class="form-group">
    <%= f.label :"氏名", class: "col-xs-3" %>
    <%= f.text_field :last_name %>
    <%= f.text_field :first_name %>
  </div>

  <div class="form-group">
    <%= f.label :"フリガナ", class: "col-xs-3" %>
    <%= f.text_field :last_name_kana %>
    <%= f.text_field :first_name_kana %>
  </div>

  <div class="form-group">
    <%= f.label :"郵便番号", class: "col-xs-3" %>
    <%= f.text_field :postal_code %>
  </div>

  <div class="form-group">
    <%= f.label :"住所", class: "col-xs-3" %>
    <%= f.text_field :address, :size => "70" %>
  </div>

  <div class="form-group">
    <%= f.label :"電話番号", class: "col-xs-3" %>
    <%= f.text_field :phone_number %>
  </div>

  <div class="form-group">
    <%= f.label :"メールアドレス", class: "col-xs-3" %>
    <%= f.email_field :email %>
  </div>

  <div class="form-group">
    <%= f.label :"会員ステータス", class: "col-xs-3" %>
    <%= f.radio_button :is_deleted, false %>
    <%= f.label :is_deleted, "有効", {value: :false, style: "display: inline-block;"}%>
    <%= f.radio_button :is_deleted, true %>
    <%= f.label :is_deleted, "退会済み", {value: :true, style: "display: inline-block;"}%>
  </div>

<div class="actions">
  <%= f.submit "変更を保存する", class: "btn btn-primary" %>
</div>
</div>
<% end %>
