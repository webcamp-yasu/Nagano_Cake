<% provide(:title, "会員情報編集") %>

<h2><%= full_name(@customer) %>さんの会員情報編集</h2>

<%= form_for(@customer, url: admin_customer_path) do |f| %>

<% if @customer.errors.any? %>
<div id="error_explanation">
  <h3><%= @customer.errors.count %>件のエラーが発生しました</h3>
  <ul>
    <% @customer.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>

<div class="form-group row">
  <!-- ID が小文字になってしまうので2つ記載-->
  <%= f.label :"会員ID", "会員ID", class: "col-xs-4 col-sm-3 col-form-label" %>
  <%= f.label :"#{@customer.id}", class: "col-xs-3 col-sm-2" %>
</div>

<div class="form-group row">
  <%= f.label :"氏名", class: "col-xs-4 col-sm-3 col-form-label" %>
  <div class="col-xs-3 col-sm-2">
    <%= f.text_field :last_name, class: "form-control" %>
  </div>
  <div class="col-xs-3 col-sm-2">
    <%= f.text_field :first_name, class: "form-control" %>
  </div>
</div>

<div class="form-group row">
  <%= f.label :"フリガナ", class: "col-xs-4 col-sm-3 col-form-label" %>
  <div class="col-xs-3 col-sm-2">
    <%= f.text_field :last_name_kana, class: "form-control" %>
  </div>
  <div class="col-xs-3 col-sm-2">
    <%= f.text_field :first_name_kana, class: "form-control" %>
  </div>
</div>

<div class="form-group row">
  <%= f.label :"郵便番号（ハイフンなし）", class: "col-xs-4 col-sm-3 col-form-label" %>
  <div class="col-xs-3 col-sm-2">
    <%= f.text_field :postal_code, autofocus: true, placeholder: "郵便番号", class: "form-control" %>
  </div>
</div>

<div class="form-group row">
  <%= f.label :"住所", class: "col-xs-4 col-sm-3 col-form-label" %>
  <div class="col-xs-8 col-sm-5">
    <%= f.text_field :address, autofocus: true, placeholder: "住所", class: "form-control" %>
  </div>
</div>

<div class="form-group row">
  <%= f.label :"電話番号（ハイフンなし）", class: "col-xs-4 col-sm-3 col-form-label" %>
  <div class="col-xs-3 col-sm-2">
    <%= f.text_field :phone_number, autofocus: true, placeholder: "電話番号", class: "form-control" %>
  </div>
</div>

<div class="form-group row">
  <%= f.label :"メールアドレス", class: "col-xs-4 col-sm-3 col-form-label" %>
  <div class="col-xs-8 col-sm-2">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "メールアドレス", class: "form-control" %>
  </div>
</div>

<div class="form-group row">
  <%= f.label :"会員ステータス", class: "col-xs-4 col-sm-3 col-form-label" %>
  <%= f.radio_button :is_deleted, false %>
  <%= f.label :is_deleted, "有効", {value: :false, style: "display: inline-block;"}%>
  <%= f.radio_button :is_deleted, true %>
  <%= f.label :is_deleted, "退会済み", {value: :true, style: "display: inline-block;"}%>
</div>

<div class="actions text-center">
  <%= f.submit "変更を保存する", class: "btn btn-lg btn-primary" %>
</div>
<% end %>
