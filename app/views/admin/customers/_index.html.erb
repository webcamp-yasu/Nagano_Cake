<table class="table table-bordered">
  <thead>
    <tr>
      <th>会員ID</th>
      <th>氏名</th>
      <th>メールアドレス</th>
      <th>ステータス</th>
    </tr>
  </thead>
  <tbody>
    <% customers.each do |customer| %>
      <tr>
        <td><%= customer.id %></td>
        <td><%= link_to full_name(customer), admin_customer_path(customer), class: "btn-link" %></td>
        <td><%= customer.email %></td>
        <td>
          <% if customer.is_deleted == true %>
            <p>退会済</p>
          <% else %>
            <p>有効</p>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>