<div class="row">
  <h2>商品新規登録</h2>

  <%= form_for(@item, url:admin_items_path) do |f| %>

  <div class="field-group">
    <%= f.attachment_field :image %>
  </div>
  <div class="field-group">
    <%= f.label :"商品名" %>
    <%= f.text_field :name %>
  </div>
  <div class="field-group">
    <%= f.label :"商品説明" %>
    <%= f.text_area :detail %>
  </div>
  <div class="field-group">
    <%= f.label :"ジャンル" %>
    <%= f.collection_select :genre_id, Genre.all, :id, :name %>
  </div>
  <div class="field-group">
    <%= f.label :"税抜価格" %>
    <%= f.number_field :price %>"円"
  </div>
  <div class="field-group">
    <%= f.label :"販売ステータス" %>
    <%= f.select :is_active,[["販売中",true],["販売中止",false]] %>
  </div>

  <div class="actions">
    <%= f.submit '新規登録', class: "btn btn-primary" %>
  </div>

  <% end %>
</div>
