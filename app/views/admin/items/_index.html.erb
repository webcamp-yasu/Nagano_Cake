<table class="table">
  <thead>
    <tr>
      <th>商品ID</th>
      <th>商品名</th>
      <th>税抜価格</th>
      <th>ジャンル</th>
      <th>ステータス</th>
    </tr>
  </thead>

  <tbody>
    <% items.each do |item| %>
    <tr>
      <td><%=  item.id %></td>
      <td><u><%= link_to item.name, admin_item_path(item) %></u></td>
      <td><%= item.price %>円</td>
      <td><%= item.genre.name %></td>
      <td>
        <% if item.is_active == true %>
        <p>販売中</p>
        <% else %>
        <p>販売停止中</p>
        <% end %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
<div class="text-center"><%= paginate(items) %></div>