<h2>商品編集</h2>
<div class="row">
  <%= form_for(@item, url:admin_item_path) do |f| %>
  <div class="form-group">
    <%= attachment_image_tag @item, :image, :fill, 300, 250 %>
    <%= f.attachment_field :image %>
  </div>
  <div class="form-group">
    <%= f.label :"商品名" %>
    <%= f.text_field :name %>
  </div>
  <div class="form-group">
    <%= f.label :"商品説明" %>
    <%= f.text_area :detail %>
  </div>
  <div class="form-group">
    <%= f.label :"ジャンル" %>
    <%= f.collection_select :genre_id, Genre.all, :id, :name %>
  </div>
  <div class="form-group">
    <%= f.label :"税抜価格" %>
    <%= f.number_field :price %>円
  </div>
  <div class="form-group">
    <%= f.label :"販売ステータス" %>
    <%= f.select :is_active,[["販売中",true],["販売中止",false]] %>
  </div>
  <div class="actions">
    <%= f.submit '変更を保存', class: "btn btn-primary pull-right"%>
  </div>
  <% end %>
</div>
