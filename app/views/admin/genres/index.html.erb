<h1>ジャンル一覧・追加</h1>

<%= form_for @genre, url: admin_genres_path do |g| %>
<div>
	<%= g.label :"ジャンル" %>
	<%= g.text_field :"name" %>
	<div>

		<div>
			<%= form_with(model: @genre, url: admin_genres_path, local: true) do |form| %>
			<%= form.radio_button :is_active, :true %>
			<%= form.label :is_active, "有効", {value: :true, style: "display: inline-block;"} %>
			<%= form.radio_button :gender, :female %>
			<%= form.label :is_active, "無効", {value: :false, style: "display: inline-block;"} %>
			<% end %>
		</div>

		<div class="actions">
			<%= g.submit :"追加", class: "btn btn-primary" %>
		</div>
		<% end %>

		<table>
			<thead>
				<tr>
					<th>ジャンル</th>
					<th>状態</th>
				</tr>
			</thead>

			<tbody>
				<% @genres.each do |genre| %>
				<tr>
					<td>
						<%= link_to admin_genre_path(genre) %>
					</td>

					<td>
						<%= link_to genre.is_active, admin_genre_path(genre), class: "genre_#{genre.id}" %>
					</td>

					<td>
						<%= link_to "編集する", edit_admin_genre_path(genre), class: "btn-sm btn-success edit_admin_genre_#{genre.id}" %>
					</td>
				</tr>
				<% end %>
			</tbody>
		</table>