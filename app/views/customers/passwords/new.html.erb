<% provide(:title, "パスワード再発行") %>

<h2>パスワードをお忘れの方</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "customers/shared/error_messages", resource: resource %>

  <div class="form-group row">
    <%= f.label :"メールアドレス", class: "col-xs-4 col-sm-2" %>
    <div class="col-xs-4 col-sm-2">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "メールアドレス", class: "form-control" %>
    </div>
  </div>

  <div class="actions text-center">
    <%= f.submit "パスワード再発行メールを送信する", class: "btn btn-success" %>
  </div>
<% end %>
<br>
<%= link_to "ホーム画面に戻る", root_path %>
