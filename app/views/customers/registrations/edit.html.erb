<% provide(:title, "パスワード変更") %>

<h2>パスワード変更</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
<%= render "customers/shared/error_messages", resource: resource %>

<% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
<div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
<% end %>

<div class="form-group row">
  <%= f.label :"新しいパスワード", class: "col-xs-5 col-sm-4" %>
  <div class="col-xs-5 col-sm-5">
    <%= f.password_field :password, autocomplete: "new-password", placeholder: "新しいパスワード", class: "form-control" %>
  </div>
</div>

<div class="form-group row">
  <%= f.label :"新しいパスワードの確認", class: "col-xs-5 col-sm-4" %>
  <div class="col-xs-5 col-sm-5">
    <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "パスワードの確認", class: "form-control" %>
  </div>
</div>

<div class="form-group row">
  <%= f.label :"既存のパスワード", class: "col-xs-5 col-sm-4" %>
  <div class="col-xs-5 col-sm-5">
    <%= f.password_field :current_password, autocomplete: "current-password", placeholder: "既存のパスワード", class: "form-control" %>
  </div>
  <br><i class="col-xs-12">（変更するには既存のパスワードが必要です）</i>
</div>

<div class="actions text-center">
  <%= f.submit "パスワード変更", class: "btn btn-success col-xs-offset-4" %>
</div>
<% end %>
<br>
<%= link_to "戻る", :back %>
