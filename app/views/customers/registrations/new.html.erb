<h2>新規会員登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
<%= render "customers/shared/error_messages", resource: resource %>

<div class="field form-group">
  <%= f.label :"名前" %>
  <%= f.label :"（姓）" %>
  <%= f.text_field :last_name, autofocus: true, placeholder: "（姓）" %>
  <%= f.label :"（名）" %>
  <%= f.text_field :first_name, autofocus: true, placeholder: "（名）" %>
</div>

<div class="field form-group">
  <%= f.label :"フリガナ" %>
  <%= f.label :"（セイ）" %>
  <%= f.text_field :last_name_kana, autofocus: true, placeholder: "（セイ）" %>
  <%= f.label :"（メイ）" %>
  <%= f.text_field :first_name_kana, autofocus: true, placeholder: "（メイ）" %>
</div>


<div class="field form-group">
  <%= f.label :"メールアドレス" %>
  <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "メールアドレス" %>
</div>

<div class="field form-group">
  <%= f.label :"郵便番号（ハイフンなし）" %>
  <%= f.text_field :postal_code, autofocus: true, placeholder: "郵便番号" %>
</div>

<div class="field form-group">
  <%= f.label :"住所" %>
  <%= f.text_field :address, autofocus: true, :size => "70", placeholder: "住所" %>
</div>

<div class="field form-group">
  <%= f.label :"電話番号（ハイフンなし）" %>
  <%= f.text_field :phone_number, autofocus: true, placeholder: "電話番号" %>
</div>

<div class="field form-group">
  <%= f.label :"パスワード（6文字以上）" %>
  <%= f.password_field :password, autocomplete: "new-password", placeholder: "パスワード" %>
</div>

<div class="field form-group">
  <%= f.label :"パスワード（確認用）" %>
  <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "パスワード確認" %>
</div>

<div class="actions">
  <%= f.submit "新規登録", class: "btn btn-success" %>
</div>
<% end %>

<div>
  <h2>既に登録済みの方</h2>
  <p><%= render "customers/shared/links" %>からログインしてください。</p>
</div>


