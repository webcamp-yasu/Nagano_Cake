<% provide(:title, "新規登録") %>

<div class="row">
  <h1>新規会員登録</h1>

  <div class="registraion-form">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "customers/shared/error_messages", resource: resource %>
    
    <div class="form-group row">
      <%= f.label :"名前", class: "col-xs-4 col-sm-3 col-form-label" %>
      <div class="col-xs-3 col-sm-2">
        <%= f.text_field :last_name, autofocus: true, placeholder: "（姓）", class: "form-control" %>
      </div>
      <div class="col-xs-3 col-sm-2">
        <%= f.text_field :first_name, autofocus: true, placeholder: "（名）", class: "form-control" %>
      </div>
    </div>
    <div class="form-group row">
      <%= f.label :"フリガナ", class: "col-xs-4 col-sm-3 col-form-label" %>
      <div class="col-xs-3 col-sm-2">
        <%= f.text_field :last_name_kana, autofocus: true, placeholder: "（セイ）", class: "form-control" %>
      </div>

      <div class="col-xs-3 col-sm-2">
        <%= f.text_field :first_name_kana, autofocus: true, placeholder: "（メイ）", class: "form-control" %>
      </div>
    </div>
    <div class="form-group row">
      <%= f.label :"メールアドレス", class: "col-xs-4 col-sm-3 col-form-label" %>
      <div class="col-xs-8 col-sm-2">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "メールアドレス", class: "form-control" %>
      </div>
    </div>
    <div class="form-group row">
      <%= f.label :"郵便番号（ハイフンなし）", class: "col-xs-4 col-sm-3 col-form-label" %>
      <div class="col-xs-3 col-sm-2">
        <%= f.text_field :postal_code, autofocus: true, placeholder: "郵便番号", class: "form-control" %>
      </div>
    </div>
    <div class="form-group row">
      <%= f.label :"住所", class: "col-xs-4 col-sm-3 col-form-label" %>
      <div class="col-xs-8 col-sm-5">
        <%= f.text_field :address, autofocus: true, placeholder: "住所", class: "form-control" %>
      </div>
    </div>
    <div class="form-group row">
      <%= f.label :"電話番号（ハイフンなし）", class: "col-xs-4 col-sm-3 col-form-label" %>
      <div class="col-xs-3 col-sm-2">
        <%= f.text_field :phone_number, autofocus: true, placeholder: "電話番号", class: "form-control" %>
      </div>
    </div>
    <div class="form-group row">
      <%= f.label :"パスワード（6文字以上）", class: "col-xs-4 col-sm-3 col-form-label" %>
      <div class="col-xs-3 col-sm-2">
        <%= f.password_field :password, autocomplete: "new-password", placeholder: "パスワード", class: "form-control" %>
      </div>
    </div>
    <div class="form-group row">
      <%= f.label :"パスワード（確認用）", class: "col-xs-4 col-sm-3 col-form-label" %>
      <div class="col-xs-3 col-sm-2">
        <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "パスワード確認", class: "form-control" %>
      </div>
    </div>
    
    <div class="actions text-center">
      <%= f.submit "新規登録", class: "btn btn-lg btn-success" %>
    </div>
    <% end %>

    <div>
      <h3>既に登録済みの方</h3>
      <p><%= render "customers/shared/links" %>からログインしてください。</p>
    </div>
    
  </div>
</div>

