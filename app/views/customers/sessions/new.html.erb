<% provide(:title, "ログイン") %>
<div class="row">
	<h3>会員の方はこちらからログイン</h3>
	<div class="col-xs-12 registraion-form">
		<div id="error_explanation">
		  <%= flash[:alert] %>
		</div>

		<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

			<div class="form-group">
			<table>
				<tbody>
					<tr>
						<th><%= f.label :"メールアドレス　" %></th>
						<td> <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "メールアドレス" %>
			  （テストアカウント：test1@test.com）</td>
					</tr>
					<tr>
						<th><%= f.label :"パスワード" %></th>
						<td><%= f.password_field :password, autocomplete: "current-password", placeholder: "パスワード" %>
			  （パスワード：password）</td>
					</tr>
				</tbody>
			</table>

			</div>

			<div class="pull-right">
			  <%= link_to "=>パスワードを忘れた方はこちら", new_password_path(resource_name), class: "btn-link" %>
			</div>

			<div class="actions">
			  <%= f.submit "ログイン", class: "btn btn-primary" %>
			</div>
		<% end %>
	</div>

	<h3>登録がお済みでない方</h3>
	<p><%= link_to "こちら", new_customer_registration_path %>から新規登録を行ってください。</p>
</div>

