<% provide(:title, "ログイン") %>
<div class="container">
<div class="row">
  <div class="col-xs-12 col-sm-6">
	<h2>ログイン</h2>
  	<div class="registraion-form">

    <div id="error_explanation">
      <%= flash[:alert] %>
      <%= flash[:error] %>
    </div>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

      <div class="form-group row">
        <%= f.label :"メールアドレス", class: "col-xs-4 col-sm-4" %>
        <div class="col-xs-7 col-sm-7">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "メールアドレス", class: "form-control" %>
        </div>
      </div>

      <div class="form-group row">
        <%= f.label :"パスワード", class: "col-xs-4 col-sm-4" %>
        <div class="col-xs-7 col-sm-7">
          <%= f.password_field :password, autocomplete: "current-password", placeholder: "パスワード", class: "form-control" %>
        </div>
      </div>

      <div class="actions col-xs-offset-8 col-md-offset-9">
        <%= f.submit "ログイン", class: "btn btn-lg btn-primary" %>
      </div>
  <% end %>

      <div>
        <%= link_to "パスワードを忘れた方はこちら", new_password_path(resource_name), class: "btn-link" %>
      </div>
      
      </div>
  </div>
  <div class="col-xs-12 col-sm-6">
        <h2>登録がお済みでない方</h2>
        <%= link_to new_customer_registration_path do %>
          <button class="btn btn-success btn-lg col-xs-offset-4" >新規登録にすすむ</button>
        <% end %>
      </div>
  </div>
</div>