<% provide(:title, "ログイン") %>
<div class="container">
<div class="row">
  <div class="col-xs-12 col-sm-6">
	<h3>ログイン</h3>
  	<div class="registraion-form">

      <div id="error_explanation">
        <%= flash[:alert] %>
      </div>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

      <div class="form-group row">
        <%= f.label :"メールアドレス", class: "col-xs-4 col-sm-4" %>
        <div class="col-xs-7 col-sm-7">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "メールアドレス", class: "form-control" %>
        </div>
        test1@test.com
      </div>

      <div class="form-group row">
        <%= f.label :"パスワード", class: "col-xs-4 col-sm-4" %>
        <div class="col-xs-7 col-sm-7">
          <%= f.password_field :password, autocomplete: "current-password", placeholder: "パスワード", class: "form-control" %>
        </div>
        password
      </div>

      <div class="actions pull-right">
        <%= f.submit "ログイン", class: "btn btn-primary btn-lg" %>
      </div>
  <% end %>

      <div>
        <%= link_to "パスワードを忘れた方はこちら", new_password_path(resource_name), class: "btn-link pull-left" %>
      </div>
      
      </div>
  </div>
  <div class="col-xs-12 col-sm-6">
        <h3>登録がお済みでない方</h3>
        <p><%= link_to new_customer_registration_path do %>
          <button class="btn btn-success btn-lg" >新規登録</button> を行ってください。</p>
        <% end %></p>
      </div>
  </div>
</div>